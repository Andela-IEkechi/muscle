.container-fluid
  .form-wrapper
    = form_for(@consignment) do |f|
      - if @consignment.errors.any?
        #error_explanation
          %h2
            = pluralize(@consignment.errors.count, "error")
            prohibited this consignment from being saved:
          %ul
            - @consignment.errors.full_messages.each do |message|
              %li= message
      .field.form-group
        = f.label :product_id
        = f.text_field :product_id, class: "form-control"
      .field.form-group
        = f.label :quantity
        = f.number_field :quantity, class: "form-control"
      .field.form-group
        = f.label :user_id
        = f.text_field :user_id, class: "form-control"
      .actions
        = f.submit class: "btn btn-lg btn-primary btn-block"
