.container-fluid
  .form-wrapper
    = form_for(@release) do |f|
      - if @release.errors.any?
        #error_explanation
          %h2
            = pluralize(@release.errors.count, "error")
            prohibited this release from being saved:
          %ul
            - @release.errors.full_messages.each do |message|
              %li= message
      .field.form-group
        = f.label :product_id
        = f.text_field :product_id, class: "form-control"
      .field.form-group
        = f.label :quantity
        = f.number_field :quantity, class: "form-control"
      .field.form-group
        = f.label :user_id
        = f.text_field :user_id, class: "form-control"
      .field.form-group
        = f.label :invoice_number
        = f.number_field :invoice_number, class: "form-control"
      .field.form-group
        = f.label :customer_number
        = f.number_field :customer_number, class: "form-control"
      .actions
        = f.submit class: "btn btn-lg btn-primary btn-block"
