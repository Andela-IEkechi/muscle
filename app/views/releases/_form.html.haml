= form_for @release do |f|
  - if @release.errors.any?
    #error_explanation
      %h2= "#{pluralize(@release.errors.count, "error")} prohibited this release from being saved:"
      %ul
        - @release.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :purchase
    = f.text_field :purchase
  .field
    = f.label :confirmation_code
    = f.text_field :confirmation_code
  .actions
    = f.submit 'Save'
